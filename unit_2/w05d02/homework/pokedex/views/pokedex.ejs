                <!-- div that holds all damage related data -->
                <div class="card list-unstyled p-3" style="width: 20%;">
                    <div class="mx-auto">
                        <h1>Damages</h1>

                        <!-- Each damage data -->
                        <li class="mb-2">Normal: <%= poke.damages.normal %> </li>
                        <li class="mb-2">Fire: <%= poke.damages.fire %></li>
                        <li class="mb-2">Water: <%= poke.damages.water %></li>
                        <li class="mb-2">Electric: <%= poke.damages.electric %></li>
                        <li class="mb-2">Grass: <%= poke.damages.grass %></li>
                        <li class="mb-2">Ice: <%= poke.damages.ice %></li>
                        <li class="mb-2">Fight: <%= poke.damages.fight %></li>
                        <li class="mb-2">Poison: <%= poke.damages.poison %></li>
                        <li class="mb-2">Ground: <%= poke.damages.ground %></li>
                        <li class="mb-2">Flying: <%= poke.damages.flying %></li>
