<!DOCTYPE html>
<html>
    <head>
        <title>
            Pokedex
        </title>
        <%- include('./partials/head.ejs') %> 
    </head>
    <body style="width: 100vw" class="bg-dark">

        <!-- NavBar -->
        <%- include('./partials/nav.ejs') %> 

        <main>
            <!-- Top section that contains Image and pokemon name with type -->
            <div class="card mb-3 mx-4 d-flex flex-column justify-content-center align-items-center">
                <img class="card-img-top mt-2" src="<%= poke.img %>" alt="Card image cap" style="width: 18em;">
                <div class="card-body">
                    <h5 class="card-title"><%= poke.name %> </h5>
                    <p class="text-center"><%= poke.type[0] %> <%= poke.type[1] %> </p>
                </div>
            </div>

            <!-- =================== Bottom Section ================================= -->
            <!-- ==================================================================== -->
            <div class="d-flex justify-content-around">
                <!-- Section that holds stats related data -->
                <div class="card list-unstyled p-3" style="width: 20%;">
                    <div class="mx-auto">
                        <h1>Stats</h1>
                        <!-- stats list items -->
                        <li class="mb-2">Hp: <%= poke.stats.hp %></li>
                        <li class="mb-2">Attack: <%= poke.stats.attack %></li>
                        <li class="mb-2">Defense: <%= poke.stats.defense %></li>
                        <li class="mb-2">Sp.Attack: <%= poke.stats.spattack %></li>
                        <li class="mb-2">Sp.Defense: <%= poke.stats.spdefense %></li>
                        <li class="mb-2">Speed: <%= poke.stats.speed %></li>
                    </div>
                    
                </div>

                <!-- Middle div that simulates a pokemon wiki -->
                <article class="card px-3" style="width: 50%;">
